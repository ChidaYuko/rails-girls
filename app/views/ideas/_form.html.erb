<%= form_with(model: idea, local: true) do |form| %>
  <% if idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row flex formMargin">

    <div class="col-md-2 formMargin">
      <%= form.label :name %>
    </div>
    <div class="col-md-10 formMargin">
      <%= form.text_field :name %>
    </div>

    <div class="col-md-2 formMargin">
      <%= form.label :description %>
    </div>
    <div class="col-md-10 formMargin">
      <%= form.text_area :description %>
    </div>

    <div class="col-md-2 formMargin">
      <%= form.label :picture %>
    </div>
    <div class="col-md-10 formMargin">
      <%= form.file_field :picture %>
    </div>

    <div class="col-md-2 formMargin">
      <%= form.label :evaluation %>
    </div>
    <div class="col-md-10 formMargin">
      <%= form.select :evaluation, @showEvaluation %>
    </div>

    <div class="col-md-12 formMargin">
     <div class="actions">
        <%= form.submit %>
      </div>
    </div>

  </div>
<% end %>
